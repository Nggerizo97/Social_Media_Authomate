# Social Media Automation Environment Variables
# Copy this file to .env and fill in your actual credentials

# Google Gemini API (for existing image generation functionality)
API_KEY=YOUR_GOOGLE_GEMINI_API_KEY_HERE
DRIVE_SERVICE_ACCOUNT_FILE=path/to/your/service-account-file.json
DRIVE_FOLDER_ID=YOUR_GOOGLE_DRIVE_FOLDER_ID_HERE

# Facebook Graph API
FB_APP_ID=YOUR_FACEBOOK_APP_ID_HERE
FB_APP_SECRET=YOUR_FACEBOOK_APP_SECRET_HERE
FB_ACCESS_TOKEN=YOUR_FACEBOOK_ACCESS_TOKEN_HERE
FB_PAGE_ID=YOUR_FACEBOOK_PAGE_ID_HERE

# YouTube Data API
YOUTUBE_CLIENT_ID=YOUR_YOUTUBE_CLIENT_ID_HERE
YOUTUBE_CLIENT_SECRET=YOUR_YOUTUBE_CLIENT_SECRET_HERE
YOUTUBE_REFRESH_TOKEN=YOUR_YOUTUBE_REFRESH_TOKEN_HERE

# Instagram Credentials (for Selenium automation)
INSTAGRAM_USERNAME=YOUR_INSTAGRAM_USERNAME_HERE
INSTAGRAM_PASSWORD=YOUR_INSTAGRAM_PASSWORD_HERE

# TikTok Credentials (for Selenium automation)
TIKTOK_USERNAME=YOUR_TIKTOK_USERNAME_HERE
TIKTOK_PASSWORD=YOUR_TIKTOK_PASSWORD_HERE

# Selenium Configuration
WEBDRIVER_PATH=./drivers/chromedriver
HEADLESS_MODE=true
IMPLICIT_WAIT=10